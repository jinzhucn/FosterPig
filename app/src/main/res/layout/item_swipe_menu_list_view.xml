<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_item_left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/test_item_image" />


    <TextView
        android:id="@+id/tv_monitor_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_item_left_image"
        android:layout_toRightOf="@id/iv_item_left_image"
        android:text="#2猪舍安琪点"
        android:textColor="@color/red"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tv_monitor_warn_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_left_image"
        android:layout_toRightOf="@id/iv_item_left_image"
        android:text="报警时间: 2016/11/11 21:21:15"
        android:textColor="@color/black"
        android:textSize="12dp" />


    <TextView
        android:layout_marginRight="20dp"
        android:id="@+id/tv_monitor_warn_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_item_left_image"
        android:text="1000ppm"
        android:textColor="@color/red"
        android:textSize="18dp" />

</RelativeLayout>